@model IEnumerable<TaskManagerApp.Models.TaskItem>

<h2>Task List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.IsCompleted</td>
                <td>
                    <a class="btn btn-primary" href="/Tasks/Edit/@task.Id">Edit</a>
                    <a class="btn btn-danger" href="/Tasks/Delete/@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" href="/Tasks/Create">Add New Task</a>
